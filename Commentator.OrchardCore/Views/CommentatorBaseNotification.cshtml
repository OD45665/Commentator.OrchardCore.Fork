@model CommentNotificationsContentViewModel

@{
    Layout = "";
}

<html>
<head>
    <title>Message Title</title>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta http-equiv="Content-Type" content="text/html; charset=UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <base href="@Site.BaseUrl">
    <style>
        #page-title-pattern-header a,
        #page-title-pattern-icon-cell a,
        #footer-pattern-links-container a {
            color: #3b73af;
            text-decoration: none;
        }

        .comment-header {
            line-height: 1;
            font-size: 13px;
            margin-bottom: 3px;
            align-items: center;
            display: flex;
        }

        .post-by {
            font-size: 13px;
            font-weight: bold;
            padding-right: 3px;
        }

        .avatar {
            padding-right: 4px;
        }

        .mention {
            background: rgba(153,0,48,0.1);
            color: #990030;
        }
    </style>
</head>
<body>
    <table id="background-table" cellpadding="0" cellspacing="0" width="100%" bgcolor="#f5f5f5">
        <tbody>
            <tr>
                <td id="header-container" style="padding: 0px; border-collapse: collapse; padding: 10px 20px">
                    <table id="header-pattern" cellspacing="0" cellpadding="0" border="0" style="color: #333333">
                        <tbody>
                            <tr>
                                <td id="header-text-container" valign="middle" style="font-family: Arial, sans-serif; font-size: 14px; line-height: 20px;">Hello <strong>@Model.User</strong>,</td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <td id="header-container" style="padding: 0px; border-collapse: collapse; padding: 10px 20px">
                    <table id="header-pattern" cellspacing="0" cellpadding="0" border="0" style="color: #333333">
                        <tbody>
                            <tr>
                                <td id="header-text-container" valign="middle" style="font-family: Arial, sans-serif; font-size: 14px; line-height: 20px;">@Model.Message</td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <td id="email-content-container" style="padding: 0px; border-collapse: collapse; padding: 0 20px">
                    <table id="email-content-table" cellspacing="0" cellpadding="0" border="0" width="100%">
                        <tbody>
                            <tr>
                                <td class="email-content-rounded-top" style="padding: 0px; color: #ffffff; padding: 0 15px 0 16px; height: 15px; background-color: #ffffff; border-left: 1px solid #cccccc; border-top: 1px solid #cccccc; border-right: 1px solid #cccccc; border-bottom: 0; border-top-right-radius: 5px; border-top-left-radius: 5px" height="15" bgcolor="#ffffff">&nbsp;</td>
                            </tr>
                            @Html.Raw(Model.ContentData)
                            <tr>
                                <td class="email-content-rounded-bottom" style="padding: 0px; color: #ffffff; height: 5px; line-height: 5px; padding: 0 15px 0 16px; background-color: #ffffff; border-bottom-right-radius: 5px; border-bottom-left-radius: 5px; border-top: 0; border-left: 1px solid #cccccc; border-bottom: 1px solid #cccccc; border-right: 1px solid #cccccc;" height="5" bgcolor="#ffffff">&nbsp;</td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
            <tr>
                <td id="footer-pattern" style="padding: 12px 20px">
                    <table id="footer-pattern-container" cellspacing="0" cellpadding="0" border="0" width="100%" style="color: #333333">
                        <tbody>
                            <tr>
                                <td id="footer-pattern-links-container" width="100%" style="padding: 0px; color: #999999; font-size: 12px; line-height: 18px; font-family: Arial, sans-serif;">
                                </td>
                                <td id="footer-pattern-logo-container" rowspan="2" valign="top" style="padding: 0px; border-collapse: collapse; padding-left: 20px; vertical-align: top">
                                    <table style="color: #333333">
                                        <tbody>
                                            <tr>
                                                <td id="footer-pattern-logo-padding" style="padding: 0px; padding-top: 3px">
                                                    <img id="footer-pattern-logo" src="https://apps.dcr-support.com/images/dcrlogo.png">
                                                </td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </td>
                            </tr>
                        </tbody>
                    </table>
                </td>
            </tr>
        </tbody>
    </table>
</body>
</html>