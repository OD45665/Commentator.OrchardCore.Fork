@model CommentatorNotificationsSettings

<div class="form-group">
    <div class="custom-control custom-switch">
        <input asp-for="SendCommentNotifications" type="checkbox" class="custom-control-input" checked="@Model.SendCommentNotifications" />
        <label asp-for="SendCommentNotifications" class="custom-control-label cursor-pointer">@T["Enable Notifications"]</label>
        <span class="hint"> - @T["Check this to Enable Notifications"]</span>
    </div>
</div>

<div id="comments-notifications-properties">
    <div class="form-group">
        <div class="card">
            <div class="card-body">
                <h5>Comment Reply Email Settings</h5>
                <div class="row">
                    <div class="col-lg-6">
                        <label asp-for="CommentReplySubjectMessage">@T["Email Subject Message"]</label>
                        <input asp-for="CommentReplySubjectMessage" class="form-control" type="text" />
                        <span asp-validation-for="CommentReplySubjectMessage"></span>
                        <span class="hint">@T["The Subject on Email Notifications"]</span>
                    </div>
                    <div class="col-lg-6">
                        <label asp-for="CommentReplyEmailMessage">@T["Email Message"]</label>
                        <input asp-for="CommentReplyEmailMessage" class="form-control" type="text" />
                        <span asp-validation-for="CommentReplyEmailMessage"></span>
                        <span class="hint">@T["The Message on Email Notifications"]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="form-group">
        <div class="card">
            <div class="card-body">
                <h5>Comment Mentions Email Settings</h5>
                <div class="row">
                    <div class="col-lg-6">
                        <label asp-for="CommentMentionSubjectMessage">@T["Email Subject Message"]</label>
                        <input asp-for="CommentMentionSubjectMessage" class="form-control" type="text" />
                        <span asp-validation-for="CommentMentionSubjectMessage"></span>
                        <span class="hint">@T["The Subject on Email Notifications"]</span>
                    </div>
                    <div class="col-lg-6">
                        <label asp-for="CommentMentionEmailMessage">@T["Email Message"]</label>
                        <input asp-for="CommentMentionEmailMessage" class="form-control" type="text" />
                        <span asp-validation-for="CommentMentionEmailMessage"></span>
                        <span class="hint">@T["The Message on Email Notifications"]</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script at="Foot">
    $(function () {
        var toggleNotifications = $('#ISite_SendCommentNotifications');
        var notificationsProperties = $('#comments-notifications-properties');

        function displayProperties() {
            if (toggleNotifications.is(':checked')) {
                notificationsProperties.show();
            }
            else {
                notificationsProperties.hide();
            }
        }

        toggleNotifications.on('change', function () {
            if (toggleNotifications.is(':checked')) {
                notificationsProperties.show();
            }
            else {
                notificationsProperties.hide();
            }
        });

        displayProperties();
    })
</script>
